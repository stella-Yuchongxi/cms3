<h1>All Posts</h1>
<link rel="stylesheet" href="/css/post-image.css">
{{> home/form-message}}
<table class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>File</th>
        <th>Title</th>
        <th>Status</th>
        <th>Category</th>
        <th>Allow Comments</th>
        <th>View Post</th>
        <th>Date</th>
<!--        <th>Operations</th>-->
<!--        <th>Date</th>-->
    </tr>
    </thead>
    <tbody>
    {{#if posts.length}}
        {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td><img src="{{file}}" alt="Post Image" class="post-image"></td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{category.name}}</td>
                <td>{{allowComments}}</td>
                <td><a href="/post/{{slug}}">View</a></td>
                <td>{{generateDate date 'MMMM Do YYYY'}}</td>

    <!--            <td>{{generateDate date 'MMMM Do YYYY'}}</td>-->
            </tr>
        {{/each}}
    {{/if}}
    </tbody>
</table>

