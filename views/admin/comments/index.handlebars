<h1>Comments</h1>
<table class="table">
    <thead>
    <tr>
        <th>_id</th>
        <th>Author</th>
        <th>Status</th>
        <th>Body</th>
        <th>Date</th>
    </tr>
    </thead>
    <tbody>
    {{#each comments}}
    <tr>
        <th>{{_id}}</th>
        <td>{{user.firstName}} {{user.lastName}}</td>
        <td><input data-id="{{_id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"></td>
        <td>{{body}}</td>
        <td>{{generateDate date "MMMM Do YYYY"}}</td>
        <td>
            <form action="/admin/comments/delete/{{_id}}" method="post">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>
