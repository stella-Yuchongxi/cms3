<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Education
            <small>Assistant</small>
        </h1>
<!--        <h2>{{#if selectedCategory}}Posts in "{{selectedCategory}}"{{else}}All Posts{{/if}}</h2>-->
        {{#each posts}}
        <!-- Blog Post -->
        <div class="card mb-4">
            <img class="card-img-top" src="/uploads/{{file}}" alt="Card image cap">
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
<!--                <p class="card-text">{{body}}</p>-->
                <a href="/post/{{_id}}" class="btn btn-primary">Read More &rarr;</a>
                <p class="mt-2 text-muted">Category: {{this.category.name}}</p>

            </div>
            <div class="card-footer text-muted">
                Posted on {{generateDate date "MMMM Do YYYY"}} by
                <a href="#">Start Bootstrap</a>
            </div>
        </div>
        {{else}}
            <p>No posts available for this category.</p>
        {{/each}}


        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

